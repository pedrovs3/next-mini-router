  "description": "Virtual and dynamic routes made simple, like react-router-dom, but with the NextJs way",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.js",
  "scripts": {
    "build": "tsup src/index.tsx --format cjs,esm --dts --minify --external react",
