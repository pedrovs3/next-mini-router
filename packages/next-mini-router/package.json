{
  "name": "@next-mini-router/core",
  "version": "1.1.1",
  "description": "Virtual and dynamic routes made simple, like react-router-dom, but with the NextJs way",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.mjs",
  "scripts": {
    "build": "tsup src/index.tsx --format cjs,esm --dts --minify --external react",
    "npm:link": "build && npm link",
    "dev": "npm run build --watch"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "router",
    "next",
    "nextjs",
    "react",
    "reactjs",
    "react-router-dom",
    "virtual",
    "dynamic",
    "routes"
  ],
  "author": "Lucas Santos",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.8.6",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.7.5",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^42.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.4.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "prettier": "^3.0.3",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "next": "^14.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
